{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "paths": {
    "@app/*": [
      "app/"
    ],
    "@environment/*": [
      "environments/*"
    ],
    "@services/*": [
      "app/services/*"
    ],
    "@pages/*": [
      "app/pages/*"
    ],
    "@models/*": [
      "app/models/*"
    ],
    "@components/*": [
      "app/components/*"
    ]
  }
}